<section class="footer-layout">  
  <div class="footer-wrapper">
    <div class="container">
      <div class="row">
        <div class="footer-content-inner">
          <div class="footer-content">
          {% if section.settings.logo_enable %}
          <div class="logo-layout col-sm-4">
            <div class="logo-content">
              {% if section.settings.logo_image %}
              <a href="/"><img src="{{ section.settings.logo_image | img_url: "", crop: '' | split:'?v=' | first }}" alt="{{ section.settings.logo_image.alt }}" title="{{ shop.name }}" /></a>
              {% endif %}
              <div class="copyright">{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }} {{ shop.name | link_to: '/' }}<div class="clearfix"></div> {{ 'layout.footer.reserved' | t }}</div>  
            </div>
          </div>
          {% endif %}
          {% if section.settings.link1_enable %}
          <div class="link-layout col-sm-2">
            <div class="link-content">
              <div class="footer-title">
                <h5>{{ section.settings.link1_title }}</h5>
              </div>
              <ul>
                {% assign list = linklists[section.settings.link1_linklist] %}
                {% for link in list.links %}
                <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          </div>
          {% endif %}
          {% if section.settings.link2_enable %}
          <div class="link-layout col-sm-2">
            <div class="link-content">
              <div class="footer-title">
                <h5>{{ section.settings.link2_title }}</h5>
              </div>
              <ul>
                {% assign list = linklists[section.settings.link2_linklist] %}
                {% for link in list.links %}
                <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          </div>
          {% endif %}
          {% if section.settings.newsletter_enable or section.settings.social_enable %}
          <div class="newsletter-layout col-sm-4">
            {% if section.settings.newsletter_enable %}
            <div class="newsletter-content">
              <div class="footer-title">
                <h5>{{ section.settings.newsletter_title }}</h5>
              </div>
              <p class="newsletter-caption">
                {{ section.settings.newsletter_caption }}
              </p>
              <div class="newsletter-form">
                <form action="{{ section.settings.newsletter_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">                    
                  <input type="email" class="form-control" value="" name="EMAIL" id="mail" placeholder="{{ section.settings.newsletter_placeholder }}" />
                  <button type="submit" class="btn_newsletter_send" name="subscribe" id="subscribe"><i class="cs-icon icon-email"></i></button>
                </form>
              </div>
            </div>
            {% endif %}
            {% if section.settings.social_enable %}
            <div class="social-content">
              {% if section.settings.social_facebook_link != blank %}<a href="{{ section.settings.social_facebook_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Facebook' }}" class="icon-social facebook"><i class="cs-icon icon-social-facebook"></i></a>{% endif %}
              {% if section.settings.social_twitter_link != blank %}<a href="{{ section.settings.social_twitter_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Twitter' }}" class="icon-social twitter"><i class="cs-icon icon-social-twitter"></i></a>{% endif %}            
              {% if section.settings.social_google_plus_link != blank %}<a href="{{ section.settings.social_google_plus_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Google+' }}" class="icon-social google-plus"><i class="cs-icon icon-social-googleplus"></i></a>{% endif %}                        
              {% if section.settings.social_pinterest_link != blank %}<a href="{{ section.settings.social_pinterest_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Pinterest' }}" class="icon-social pinterest"><i class="cs-icon icon-social-pinterest"></i></a>{% endif %}
              {% if section.settings.social_instagram_link != blank %}<a href="{{ section.settings.social_instagram_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Instagram' }}" class="icon-social instagram"><i class="cs-icon icon-social-instagram"></i></a>{% endif %}                                    
              {% if section.settings.social_youtube_link != blank %}<a href="{{ section.settings.social_youtube_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Youtube' }}" class="icon-social youtube"><i class="cs-icon icon-social-youtube"></i></a>{% endif %}	
              {% if section.settings.social_wordpress_link != blank %}<a href="{{ section.settings.social_wordpress_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Wordpress' }}" class="icon-social wordpress"><i class="cs-icon icon-social-wordpress"></i></a>{% endif %}
              {% if section.settings.social_vimeo_link != blank %}<a href="{{ section.settings.social_vimeo_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Vimeo' }}" class="icon-social vimeo"><i class="cs-icon icon-social-vimeo"></i></a>{% endif %}	
              {% if section.settings.social_tumblr_link != blank %}<a href="{{ section.settings.social_tumblr_link }}" title="{{ 'layout.footer.social' | t: shop: shop.name, social_media: 'Tumblr' }}" class="icon-social tumblr"><i class="cs-icon icon-social-tumblr"></i></a>{% endif %}
            </div>
            {% endif %}
          </div>
          {% endif %}
        </div>
        </div>        
      </div>
    </div>
  </div>
</section>

