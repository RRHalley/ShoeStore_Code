    @mixin sub_dropdown_style($var: $_height_sub_dropdown, $_width_container: 100%){      
      .sub-dropdown{
        width: $_width_container;
        left: 0;
        top: 100%;
        height: $_height_sub_dropdown + 1px;
      }      
    }       
    > .dropdown {        
      .sub-dropdown{
        display: none;   
        width: 200px !important;
      }
      &:focus,
      &:hover{
        .sub-dropdown{
          display: block;
        }
      }
      .dropdown-menu{ padding: 0; margin: 0; @include box-shadow(0px 6px 11px 0px rgba(0,0,0,.075));}      
      &:not(.mega-menu){
        $_width_dropdown_container: 230px;
        @include sub_dropdown_style();
        @include line_listmega_style();
        .dropdown-menu{
          padding: $_padding_dropdown_content; 
          width: $_width_dropdown_container;
          .sub-dropdown{
            left: 100%;
            top: 0;
            width: 21px;
            height: 100%;
          }
          .dropdown{
            position: relative;
            width: 100%;            
            &:before{
              @include fontawesome();
              content: "\f0da";
              position: absolute;
              top: 0;
              right: 0;
              margin-top: 3px;
              color: $color_body;                  
            } 
            &:hover{
              &:before{
                color: $color_heading;
              }
            }
          }
        }        
        > .dropdown-menu{           
          > li{
            a{
              padding: 0;
              background-color: transparent;
            }
            .dropdown-menu{
              left: 100%;
              top: 0;
              margin-left: 20px;
              visibility: hidden;
              @include transition();
              @include opacity(0,0);
              @include transform(translateY(-$_height_sub_dropdown));
            }              
            @include respond-to($media_min_tabletsmall){
              &:hover, &:focus{
                > .dropdown-menu{
                  visibility: visible;
                  @include opacity(1,100);
                  @include transform(translateY(0));
                  > li{
                    &:hover, &:focus{
                      > .dropdown-menu{
                        visibility: visible;
                        @include opacity(1,100);
                        @include transform(translateY(0));
                      }
                    }                    
                  }
                }
              }
            }            
          }
        }
        @include respond-to($media_max_tablet){
          $_width_dropdown_container1: 180px;
          .dropdown-menu{
            width: $_width_dropdown_container1;
          }
        }
      }
      &.mega-menu{ 
        $_padding_mega_content: 40px;
        $_width_container_menu1: 720px;        
        .megamenu-container{
          padding: $_padding_mega_content;          
          overflow: hidden;
          background-repeat: no-repeat;
          background-position: right bottom;
          background-size: auto 100%;
          .list-title{
            text-transform: uppercase;
            font-size: $_h7;
            color: $color_heading;            
            font-weight: $font_weight_bold;
          }
          .sub-mega-menu-wrapper{
            @include padding_container();
          }
          .sub-mega-menu{
            @include line_listmega_style();
            .mega-links .li-sub-mega > a{
              position: relative;
            }
          }          
        }        
        &.megamenu-1-content{  
          @include sub_dropdown_style($_height_sub_dropdown , $_width_container_menu1);
          .megamenu-container{             
            width: $_width_container_menu1;
            left: 0;                 
          }
          @include respond-to($media_max_tablet){
            $_width_container_menu2: 600px;
            .megamenu-container{
              width: $_width_container_menu2;              
            }
          }
        }
        &.megamenu-2-content{     
          position: static;
          @include sub_dropdown_style( $_height_sub_dropdown, 100%);            
          .megamenu-container{                      
            width: 100%;                        
            left: 0%;            
          }          
          @include respond-to($media_max_tablet){
            position: static;
            $_width_megamenu_content2: 100%;
            @include sub_dropdown_style( $_height_sub_dropdown, $_width_megamenu_content2);          
            .sub-dropdown{
              top: auto;
              bottom: -1px;
              left: 50%;
              width: 100% !important;
              @include transform(translateX(-50%));
            }              
            .megamenu-container{              
              margin-top: 0;
              left: 0;              
              .sub-mega-menu{
                > li{
                  &:not(:last-child){
                    width: $width_full / 3;
                  }                  
                }
              }
            }
          }
        }
        &.megamenu-3-content{
          position: static;
          $_width_megamenu_content: 100% !important;
          @include sub_dropdown_style( $_height_sub_dropdown, $_width_megamenu_content);          
          .sub-dropdown{
            top: auto;
            bottom: -1px;
            left: 50%;
            @include transform(translateX(-50%));
          }          
          .megamenu-container{            
            padding: $_padding_mega_content ($_padding_mega_content + 15px);                        
            width: $_width_megamenu_content;                        
            margin-top: 0;
            left: 0%;            
            ul.sub-mega-menu{
