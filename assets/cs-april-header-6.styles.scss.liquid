  @mixin menu-label (){
    position: absolute !important;
    text-transform: none;
    font-size: $_h7 - 2px;
    font-weight: $font_weight_bold;
    letter-spacing: 0.05em;
    padding: 2px 7px;
    top: auto;
    bottom: 100%;
    right: 0;
    display: block;
    line-height: 16px;    
    @include transform(translateX(50%));
    &:after{
      position: absolute;
      content: '';
      display: block;
      top: 100%;
      left: 50%;
      @include transform(translateX(-50%));            
      border-left: 0 solid transparent;
      border-right: 6px solid transparent;      
    }
  }
  @mixin menu-label-color ($var1: $color_sub, $var2: #fff){
    color: $var2 !important;
    background-color: $var1 !important; 
    &:after{
      border-top: 6px solid $var1;
    }
  }
