@mixin button-nextprev($_border_nextprev: 1px, $_height_nextprev: 40px, $_width_nextprev: 40px){  
  position: absolute;
  top: 50%;
  font-size: 0;  
  width: $_width_nextprev;  
  text-align: center;  
  border-style: solid;  
  background-image: none !important; 
  border-radius: 50%;
  @include transform(translateY(-50%));
  @include btn_width($_height_nextprev, $_border_nextprev); @include  btn_pri;
  @include box-shadow( 0px 1px 2px 0px rgba(0,0,0,0.3));    
  @media(min-width: 1200px){ @include transition(); }  
  &:before{      
    @include fonticomoon();
    position: absolute; top: 50%;     
    font-size: $_h4;    
    left: 0px; 
    width: 100%; 
    text-align: center; 
    @include transform(translateY(-50%));
  }
  &:focus,
  &:hover{ @include btn1; }
}
.owl-controls{
  .owl-buttons{
    .owl-prev,
    .owl-next{      
      @include button-nextprev(); 
    }    
    .owl-next{
      right: 15px;
      &:before{
        content:'\e90b'
      }
    }
    .owl-prev{
      left: 15px;
      &:before{
        content:'\e90a'
      }      
    }
  }
}
